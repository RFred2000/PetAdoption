{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Frontend: Launch",
        "type": "node-terminal",
        "request": "launch",
        "cwd": "${workspaceFolder}/frontend",
        "command": "npm run dev"
      },
      {
        "name": "Backend: Launch",
        "type": "node-terminal",
        "request": "launch",
        "cwd": "${workspaceFolder}/backend",
        "command": "npx ts-node -r dotenv/config src/index.ts "
      },
      {
        "name": "Backend: Populate DB",
        "type": "node-terminal",
        "request": "launch",
        "cwd": "${workspaceFolder}/backend",
        "command": "npx ts-node -r dotenv/config src/populateDB.ts "
      }
    ]
  }